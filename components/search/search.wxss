/* components/search/search.wxss */

.container{position:fixed;left:0;top:0;width:100%;height: 90rpx;z-index:9999;overflow: hidden;}
.containerFocus{position:fixed;left:0;top:0;width:100%;height: 100%;z-index:9999;background:#ccc;}
.search{display:flex;align-items:center;margin:20rpx;}
.search-text{display:flex;align-items:center;flex:1;border:1px #bfbfbf solid;border-radius: 10rpx;height:60rpx;background:white;}
.search-text .icon-sousuo1{margin:0 10rpx;}
.search-text input{flex:1;}
.search-cancel{margin:0 10rpx;}

.search-history{display:flex;justify-content:space-between;margin:20rpx;font-size: 14px;margin-bottom:30rpx;}
.search-history-btn text{border:1px #bfbfbf solid;padding:10rpx 20rpx;background:white;border-radius: 20rpx;margin:10rpx;font-size: 14px;}